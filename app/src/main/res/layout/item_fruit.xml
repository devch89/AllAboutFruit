<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_fruit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_fruit_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Calories:"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fruit_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fruit_carbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Carbs:"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fruit_calories"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fruit_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Protein:"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fruit_carbs"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fruit_fats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Fats:"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fruit_protein"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fruit_sugars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sugar:"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tv_fruit_sugars"
        app:layout_constraintStart_toStartOf="parent"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>